{
  "schemaVersion": 1,
  "id": "pfm",
  "version": "${version}",

  "name": "Paladin's Furniture",
  "description": "This is a Fabric mod that adds lots of new furniture to the game!",
  "authors": [
    "UnlikePaladin"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/UnlikePaladin/paladins-furniture"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/pfm/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.unlikepaladin.pfm.PaladinFurnitureMod"
    ],
    "client": [
      "com.unlikepaladin.pfm.client.PaladinFurnitureModClient"	
    ],
    "fabric-datagen": [
      "com.unlikepaladin.pfm.data.PaladinFurnitureModDataEntrypoint"
    ],
    "rei": [
      "com.unlikepaladin.pfm.compat.rei.PaladinFurnitureModREIPlugin"
    ],
    "modmenu": [
      "com.unlikepaladin.pfm.compat.PaladinFurnitureModMenu"
    ]
  },
  "mixins": [
      "pfm.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16",
    "cloth-config2": ">=5.0.34"
  },
  "suggests": {
    "patchouli": "*"
  },

  "accessWidener" : "pfm.accesswidener"
}
